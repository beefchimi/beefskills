{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [".claude/", ".zed/", "src/pages/experiment/snapshots/*.json"],
  "bracketSpacing": false,
  "singleQuote": true,
  // NOTE: oxfmt's `experimentalSortImports` handles import ordering
  // and grouping, but does NOT enforce inline vs. top-level type
  // import style. That is handled by oxlint rules:
  // - `typescript/consistent-type-imports` (inline `type` for mixed imports)
  // - `typescript/no-import-type-side-effects` (top-level `import type` for type-only imports)
  "experimentalSortImports": {
    "groups": [
      ["side-effect"],
      ["builtin"],
      ["external", "external-type"],
      ["internal", "internal-type"],
      ["parent", "parent-type"],
      ["sibling", "sibling-type"],
      ["index", "index-type"]
    ]
  }
}
